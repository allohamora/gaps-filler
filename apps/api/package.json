{
  "name": "@gaps-filler/email",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/index.ts",
    "build": "tsc -p ./tsconfig.build.json",
    "postbuild": "tsc-alias -p ./tsconfig.build.json",
    "start": "node dist/index.js",
    "format": "prettier . --check",
    "format:fix": "prettier --write .",
    "lint": "eslint \"**/*.ts\"",
    "lint:fix": "eslint \"**/*.ts\" --fix"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.0",
    "hono": "^4.9.4",
    "znv": "^0.5.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@gaps-filler/eslint-config": "*",
    "@gaps-filler/prettier-config": "*",
    "@gaps-filler/tsconfig": "*",
    "dotenv": "^16.5.0",
    "eslint": "^9.26.0",
    "prettier": "^3.5.3",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "prettier": "@gaps-filler/prettier-config",
  "lint-staged": {
    "*.{js,cjs,mjs,json,yml,md}": "prettier --write",
    "*.ts": "eslint --fix"
  }
}
