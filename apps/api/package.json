{
  "name": "@gaps-filler/api",
  "type": "module",
  "main": "src/export.ts",
  "private": true,
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/index.ts",
    "dev-chat": "tsx src/dev-chat.ts",
    "build": "tsc -p ./tsconfig.build.json",
    "postbuild": "tsc-alias -p ./tsconfig.build.json",
    "start": "node dist/index.js",
    "format": "prettier . --check",
    "format:fix": "prettier --write .",
    "lint": "eslint \"**/*.ts\"",
    "lint:fix": "eslint \"**/*.ts\" --fix"
  },
  "dependencies": {
    "@ai-sdk/google": "^2.0.9",
    "@cartesia/cartesia-js": "^2.2.5",
    "@deepgram/sdk": "^4.11.2",
    "@hono/node-server": "^1.19.0",
    "@hono/node-ws": "^1.2.0",
    "@hono/zod-validator": "^0.7.2",
    "ai": "^5.0.24",
    "close-with-grace": "^2.2.0",
    "hono": "^4.9.4",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1",
    "znv": "^0.5.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@gaps-filler/eslint-config": "*",
    "@gaps-filler/prettier-config": "*",
    "dotenv": "^16.5.0",
    "eslint": "^9.26.0",
    "prettier": "^3.5.3",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "prettier": "@gaps-filler/prettier-config",
  "lint-staged": {
    "*.{js,cjs,mjs,json,yml,md}": "prettier --write",
    "*.ts": "eslint --fix"
  }
}
